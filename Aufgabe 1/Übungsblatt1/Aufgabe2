import math
n=int(input("Wie groß soll das Haus sein?"))#größe des Hauses
i=n
breite=0
d=n
while 1<d:
    breite=breite+2
    
while i>1:
    print(" "*(i-1) + "/" + " "*(2*(n-i)) + "\\")
    i=i-1
print("/" + "-"*(breite-2) + "\\")
a=1
while a<=n-1:
    print("|" + " "*(breite-2) + "|")
    a=a+1
print("|" +  "-"*(breite-2) + "|")